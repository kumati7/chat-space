.side-bar
  .side-header
    .side-header__box
      .side-header__box__user-name 
        = current_user.name
      .side-header__box__icon 
        = link_to new_group_path do
          = icon('far', 'edit', class: 'side-header__box__icon__group')
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog', class: 'side-header__box__icon__edit')
  .groups
    - current_user.groups.each do |group|
      .side-group
        = link_to group_messages_path(group) do
          .side-group__name
            = group.name
          .side-group__txit
            = group.show_last_message